@model RequestViewModel
@{
    ViewData["Title"] = "Home Page";
}

<h2>Youtube/Amazon Comments/Review Downloader</h2>
@Html.Partial("_alerts")
<p>Fill in the form with a Youtube video url or Amazon product url, we will get the comments/reviews and send it to your mailbox shortly.</p>
<form asp-controller="Home" asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for=RequestUrl></label>
        <input type="text" required asp-for=RequestUrl class="form-control" />
        <span asp-validation-for=RequestUrl />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="email" required asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" />
    </div>
    <div class="form-group">
        <div asp-validation-summary="All"></div>
        <button type="submit" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-send"></i> Send</button>
    </div>
</form>

